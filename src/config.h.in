#ifndef __CONFIG_H__
#define __CONFIG_H__

#include <QtCore/QCoreApplication>
#include <QtCore/QDir>
#include <QtCore/QString>

inline bool isClick() {
#ifdef CLICK_MODE
    return true;
#else
    return false;
#endif
}

inline bool isRunningInstalled()
{
    static bool installed = (QCoreApplication::applicationDirPath() == QDir("@CMAKE_INSTALL_FULL_BINDIR@").canonicalPath());
    return installed;
}

inline void setOrganization() {
    QCoreApplication::setOrganizationName("@APP_PACKAGE_NAME@");
}

inline QString galleryDirectory()
{
    if (isClick()) {
        return QString(".");
    } else if (isRunningInstalled()) {
        return QString("@CMAKE_INSTALL_PREFIX@/@GALLERY_DIR@");
    } else {
        return QString("@gallery_src_SOURCE_DIR@");
    }
}
#endif // __CONFIG_H__
